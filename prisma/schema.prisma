generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  username   String   @unique
  nick       String?  // nazwa w grze (opcjonalna)
  password   String   // bcrypt hash
  role       String   @default("user") // "user" | "admin" | "koordynator"
  profileUrl String?  // zewnętrzny link do profilu (z gry, przekazywany w POST)
  avatarUrl  String?  // stroj/avatar (opcjonalnie z gry)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  apiKeys     ApiKey[]
  mapSessions MapSession[]
  phaseResults PhaseResult[]
  invitationCodeUsed InvitationCode?
}

model ApiKey {
  id        String   @id @default(cuid())
  key       String   @unique // uuid v4, sent from TM script
  label     String?  // np. "Mój laptop", "Komputer stacjonarny"
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  active    Boolean  @default(true)
  lastUsed  DateTime?
  createdAt DateTime @default(now())

  @@index([key])
}

model Monster {
  id        String   @id @default(cuid())
  name      String   @unique // np. "Kic"
  mapName   String   // np. "Caerbannog's Grotto - 1st Chamber"
  createdAt DateTime @default(now())

  mapSessions MapSession[]
  phases     Phase[]

  @@index([name])
}

model MapSession {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  monsterId String
  monster   Monster  @relation(fields: [monsterId], references: [id])
  phaseId   String?  // do którego okresu należy (null = aktywny okres)
  phase     Phase?   @relation(fields: [phaseId], references: [id])

  heroName      String   // nazwa postaci w grze
  heroOutfitUrl String?  // URL stroju tej postaci (z gry, per sesja/postaci)
  world         String   // serwer gry
  mapName       String   // nazwa mapy

  duration  Int      // czas w sekundach
  reason    String   // 'map_change' | 'tab_close' | 'logout' | 'manual_flush'

  startedAt DateTime // kiedy zaczął stać na mapie
  endedAt   DateTime @default(now()) // kiedy wyszedł

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([monsterId])
  @@index([userId, monsterId])
  @@index([phaseId])
}

model Phase {
  id           String    @id @default(cuid())
  monsterId    String
  monster      Monster   @relation(fields: [monsterId], references: [id])
  phaseNumber  Int       // 1, 2, 3...
  name         String    // "Kic", "Kic1", "Orla", etc.
  isActive     Boolean   @default(false) // true = trwa, zbierane są sesje
  startedAt    DateTime  @default(now()) // kiedy admin uruchomił fazę
  endedAt      DateTime? // kiedy admin zakończył (null = aktywna)
  endedBy      String?   // userId admina który zakończył
  createdAt    DateTime  @default(now())

  mapSessions  MapSession[]
  phaseResults PhaseResult[]

  @@unique([monsterId, phaseNumber])
  @@index([monsterId])
  @@index([monsterId, isActive])
}

model PhaseResult {
  id        String   @id @default(cuid())
  phaseId   String
  phase     Phase    @relation(fields: [phaseId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  totalTime Int      // suma czasu w sekundach dla tego użytkownika w tej fazie
  totalSessions Int  // liczba sesji
  
  createdAt DateTime @default(now())

  @@unique([phaseId, userId])
  @@index([phaseId])
  @@index([userId])
}

// Rezerwacje: przypisanie nicku do itemu (np. Bambosze) w ramach tytana (Kic) z priorytetem I/II/III
model Reservation {
  id         String   @id @default(cuid())
  titanSlug  String   // orla, kic, renegat, arcy, zoons, lowczyni, przyzywacz, magua, teza, barbatos, tanroth
  itemKey    String   // np. bambosze, pier_woj, pier_fiz, pier_mag, kokosy, uszy (dla Kic)
  nick       String   // nick postaci w grze
  priority   Int      // 1 = Priorytet I, 2 = Priorytet II, 3 = Priorytet III
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([titanSlug, itemKey, nick])
  @@index([titanSlug, itemKey])
}

// Rezerwacje map EVE (63, 143, 300) — kto zarezerwował mapę (widoczne dla wszystkich ze skryptem)
model EveMapReservation {
  id        String   @id @default(cuid())
  eveKey    Int      // 63 | 143 | 300
  mapName   String
  nick      String   // nick z gry
  createdAt DateTime @default(now())

  @@unique([eveKey, mapName])
  @@index([eveKey])
}

// Obecność na mapach EVE — kto aktualnie jest na której mapie (lastSeen odświeżane przez skrypt)
model EveMapPresence {
  id        String   @id @default(cuid())
  eveKey    Int
  mapName   String
  nick      String
  lastSeen  DateTime @default(now())

  @@unique([eveKey, mapName, nick])
  @@index([eveKey])
  @@index([eveKey, mapName])
}

// Powiadomienia w grze: level (64,83,114,144,217,300), gracze ze skryptem odbierają i widzą popup z grafiką herosa
model HeroLevelNotification {
  id            String   @id @default(cuid())
  level         Int      // 64 | 83 | 114 | 144 | 217 | 300
  nick          String   // nazwa herosa z gry
  mapName       String
  x             Int?
  y             Int?
  lvl           Int?     // poziom herosa (np. 265m)
  heroImageUrl  String?  // opcjonalny URL obrazka
  createdAt     DateTime @default(now())

  @@index([createdAt])
}

// Jednorazowe kody zaproszenia do rejestracji (generowane przez admina)
model InvitationCode {
  id           String    @id @default(cuid())
  code         String    @unique // kilkunastoznakowy unikalny kod
  usedAt       DateTime? // null = aktywny, po rejestracji ustawione
  usedById     String?   @unique // userId kto użył (1:1 z User)
  usedBy       User?     @relation(fields: [usedById], references: [id])
  createdAt    DateTime  @default(now())

  @@index([code])
  @@index([usedAt])
}
